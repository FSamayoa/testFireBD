<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h3>Equipos</h3>
        </div>
        <div class="card-body">
            <h4>contactos</h4>
            {{#if contactos }}
            <ul class="list-group">
                {{#each contactos}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{name }}/
                    {{ phone}}
                    <a href="/borrar/{{@key}}" class="btn-btn-secondary">Eliminar</a>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>No hay nada por aqui</p>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/new-contact " method="POST">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Nombre" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="phone" placeholder="telefono" class="form-control">
                </div>
                <button class="btn-btn-primary btn-block">
                    Enviar
                </button>
            </form>
        </div>
    </div>
</div>